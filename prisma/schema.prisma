// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum NotificationType {
  LIKE
  COMMENT
  FOLLOW
  MENTION
  NEW_POST
  COMMENT_LIKE
}

model User {
  id            String    @id @default(cuid())
  name          String?
  username      String?   @unique
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  bio           String?
  website       String?
  hashedPassword String?

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  posts         Post[]
  comments      Comment[]
  likes         Like[]
  commentLikes  CommentLike[]
  saved         SavedPost[]
  
  followedBy    Follows[] @relation("following")
  following     Follows[] @relation("follower")

  taggedInPosts Post[]    @relation("PostMentions")

  notificationsReceived Notification[] @relation("recipient")
  notificationsSent     Notification[] @relation("issuer")

  accounts      Account[]
  sessions      Session[]
}

model Post {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  caption   String?
  
  images    String[] 

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  mentionedUsers User[] @relation("PostMentions")

  comments  Comment[]
  likes     Like[]
  savedBy   SavedPost[]
  notifications Notification[]
  
  // --- 建议添加：Tag 关联 (优化搜索) ---
  tags      Tag[]

  @@index([userId])
}

// --- 新增：标签模型 (用于高性能搜索) ---
model Tag {
  id    String @id @default(cuid())
  name  String @unique // 例如 "react", "nextjs"
  posts Post[]
}

model Comment {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  body      String
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  postId    String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)

  parentId  String?
  parent    Comment?  @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies   Comment[] @relation("CommentReplies")

  // --- 新增：评论点赞关联 ---
  likes     CommentLike[]
  notifications Notification[]

  @@index([postId])
  @@index([userId])
  @@index([parentId]) // 记得加索引
}

model CommentLike {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  commentId String
  comment   Comment  @relation(fields: [commentId], references: [id], onDelete: Cascade)

  @@unique([userId, commentId]) // 一个用户对一条评论只能点赞一次
  @@index([userId])
  @@index([commentId])
}

model Like {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  postId    String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@unique([userId, postId])
  @@index([userId])
  @@index([postId])
}

model Follows {
  followerId  String
  followingId String
  
  follower    User   @relation("follower", fields: [followerId], references: [id])
  following   User   @relation("following", fields: [followingId], references: [id])

  @@id([followerId, followingId])
  @@index([followerId])
  @@index([followingId])
}

model SavedPost {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  postId    String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@unique([userId, postId])
}

model Notification {
  id        String           @id @default(cuid())
  createdAt DateTime         @default(now())
  read      Boolean          @default(false)
  type      NotificationType

  // 接收者 (谁收到通知)
  recipientId String
  recipient   User   @relation("recipient", fields: [recipientId], references: [id], onDelete: Cascade)

  // 发起者 (谁触发了通知)
  issuerId    String
  issuer      User   @relation("issuer", fields: [issuerId], references: [id], onDelete: Cascade)

  // 关联资源 (可选，取决于通知类型)
  postId      String?
  post        Post?    @relation(fields: [postId], references: [id], onDelete: Cascade)

  commentId   String?
  comment     Comment? @relation(fields: [commentId], references: [id], onDelete: Cascade)

  @@index([recipientId])
  @@index([issuerId])
  @@index([postId])
}

// NextAuth Models (保持不变)
model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}